{
  "name": "ABE",
  "scripts": {
    "postdeploy": "python -m abe.postdeploy",
    "pr-predestroy": "python -m abe.pr-predestroy"
  },
  "env": {
    "LOG_LEVEL": {
      "description": "The level of logging information to display for ABE."
      "value": "DEBUG",
      "required": true
    },
    "MONGO_URI": {
      "description": "The connection URI for MongoDB.",
      "required": true
    },
    "FLASK_DEBUG": {
      "description": "Disable Flask debug mode.",
      "value": "False",
      "required": true
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "HOST": {
      "description": "The hostname for gunicorn to bind to.",
      "value": "0.0.0.0",
      "required": true
    },
    "HSTS_ENABLE": {
      "description": "Enforce SSL via HSTS",
      "value": "True",
      "required": true
    }
  },
  "formation": {
  },
  "addons": [],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
